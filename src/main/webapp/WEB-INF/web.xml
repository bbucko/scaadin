<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <display-name>scaadin</display-name>

    <context-param>
        <description>Vaadin production mode</description>
        <param-name>productionMode</param-name>
        <param-value>false</param-value>
    </context-param>

    <servlet>
        <servlet-name>Scaadin Application</servlet-name>
        <servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
        <init-param>
            <description>Vaadin application class to start</description>
            <param-name>application</param-name>
            <param-value>
                pl.iogreen.scala.vaadin.application.ScaadinApplication
            </param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>HelloScalatra</servlet-name>
        <servlet-class>pl.iogreen.scala.scalatra.ServicesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Scaadin Application</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HelloScalatra</servlet-name>
        <url-pattern>/scaadin/services/*</url-pattern>
    </servlet-mapping>
</web-app>